<tool id="rejuve_service" name="a rejuve service" version="0.1.0+galaxy0" python_template_version="3.5" profile="21.05">
    
    <requirements>
    </requirements>

    <command detect_errors="exit_code"><![CDATA[
python '$__tool_directory__/service.py'
    --d '$d_uri'
    --str  '$str'
    --file '$infile'
    --bool '$bool'
    > '$out'
    ]]></command>

    <inputs>
        <param type="directory_uri" name="d_uri" label="Directory URI" />
        <param type="boolean" name="bool" label="Boolean" />
        <param type="data" format="data" name="infile" label="Input dataset" />
        <param type="text" format="data" name="str" label="Text" />
        <param type="template" name="site_organism" strip="True" >

        <param type="select" name="database" label="Database">
            <option value="hg18">Human (hg18)</option>
            <option value="dm3">Fly (dm3)</option>
        </param>

        <param type="data_collection" name="input" label="Input Collection" />

        <param type="rules" name="rules" data_ref="input" label="Rules" />

        <param type="integer" name="rules" data_ref="input" label="Rules" />

        <param type="file" name="filep" />

        <param type="float" name="floatp" min="7.8" max="9.5" value="9" />

    </inputs>

    <outputs>
            <data name="out" format="txt" label="Export logs"/>
    </outputs>
    <help><![CDATA[
    TODO: Fill in help.
    ]]></help>
</tool>